{
  "name": "hottlecap-dapp",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js --network sepolia",
    "serve": "npx live-server public --port=8080",
    "electron": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "ethers": "^6.13.2",
    "live-server": "^1.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.bowalka.hottlecap",
    "productName": "Hottlecap DApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "msi"
    }
  }
}